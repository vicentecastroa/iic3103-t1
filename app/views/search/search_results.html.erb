<h3>Resultados para: ' <%= @keyword %> '</h3>

<% if @characters.length > 0 %>
<h4>Personajes</h4>
<ul>
  <% 
    @characters.each do |character|
    id = character['url'].split('/')[-1] 
  %>
    <li><%= link_to character['name'], controller: "characters", action: "show", id: id %></li>
  <% end %>
</ul>
<% end %>

